<%- include('../partials/header', { pageTitle: article.title, pageDescription: article.description }) %>

<!-- <div class="container mt-4"> -->
<div class="row">
    <div class="col mx-auto">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title mb-1">
                    <%= article.title %>
                </h2>
                <div class="text-muted mb-5">
                    <%= article.createdAt.toLocaleDateString() %> | Author: <%= article.author.nickname %>
                </div>
                <h4 class="card-subtitle mb-2">Description</h4>
                <div class="card-text mb-5">
                    <%= article.description %>
                </div>
                <h4 class="card-subtitle mb-2">Article</h4>
                <div class="card-text mb-4"><%- article.sanitizedHtml %></div>

                <div class="mt-3">
                    <a href="/" class="btn btn-secondary me-2">All Articles</a>
                    <% if(currentUser && (currentUser.nickname===article.author.nickname)) { %>
                    <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- </div> -->

<%- include('../partials/footer') %>