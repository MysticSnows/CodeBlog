<div class="card p-4 mb-4">
    <div class="form-group mb-3">
        <label for="title" class="form-label">Title</label>
        <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control"
            placeholder="Title must be unique!">
    </div>
    <div class="form-group mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea required name="description" id="description" class="form-control"
            placeholder="Brief description about your post"><%= article.description %></textarea>
    </div>

    <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button
                class="nav-link <%= ((typeof article.markdown == 'undefined' && typeof article.ckEditor == 'undefined') || typeof article.ckEditor != 'undefined')  ? ' active' : ' disabled' %>"
                id="ckeditor-tab" data-bs-toggle="tab" data-bs-target="#ckeditor" type="button" role="tab"
                aria-controls="ckeditor" aria-selected="false">CKEditor</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link <%= (typeof article.markdown != 'undefined')  ? ' active' : ' disabled' %>"
                id="markdown-tab" data-bs-toggle="tab" data-bs-target="#markdown" type="button" role="tab"
                aria-controls="markdown" aria-selected="true">Markdown</button>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade <%= ((typeof article.markdown == 'undefined' && typeof article.ckEditor == 'undefined') || typeof article.ckEditor != 'undefined' ) ? ' show active' : '' %>"
            id="ckeditor" role="tabpanel" aria-labelledby="ckeditor-tab">
            <div class="form-group mb-3">
                <label for="ckEditor" class="form-label">CKEditor</label>
                <div class="row">
                    <div class="document-editor__toolbar"></div>
                </div>
                <div class="row row-editor">
                    <div class="editor-container">
                        <div id="ckEditor" contenteditable="true">
                            <%- article.sanitizedHtml %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-pane fade <%= ( typeof article.markdown != 'undefined' ) ? ' show active' : '' %>" id="markdown"
            role="tabpanel" aria-labelledby="markdown-tab">
            <div class="form-group mb-3">
                <label for="markdown" class="form-label">Markdown</label>
                <textarea name="markdown" id="markdown-field" class="form-control"
                    rows="10"><%= article.markdown %></textarea>
            </div>
        </div>

    </div>

    <div class="form-group">
        <input type="hidden" id="hiddenCkEditorInput" name="ckEditor">
    </div>


    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <% if (typeof dashboard !== 'undefined') { %>
        <a href="/dashboard/manage-posts" class="btn btn-secondary">Cancel</a>
        <% } else { %>
        <a href="/" class="btn btn-secondary">Cancel</a>
        <% } %>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>